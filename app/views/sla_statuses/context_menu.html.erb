<ul>
  <% if @sla_status_ids.count == 1 %>
    <li><%= context_menu_link l(:button_show), sla_status_path(@sla_status), class: 'icon icon-magnifier', disabled: !@can[:show] %></li>
    <li><%= context_menu_link l(:button_edit), edit_sla_status_path(@sla_status), class: 'icon icon-edit', disabled: !@can[:edit] %></li>
  <% end %>
  <li><%= context_menu_link l(:button_delete),
            sla_statuses_path(id: @sla_status_ids, back_url: @back),
            method: :delete, class: 'icon icon-del', disabled: !@can[:delete],
            data: { confirm: l('sla_label.sla_status.count',count: @sla_status_ids.count)+"\n"+l(:text_are_you_sure) }
  %></li>
  <%= call_hook(:view_sla_statuses_context_menu_end, { sla_status: @sla_status, sla_statuses: @sla_statuses, can: @can, back: @back }) %>
</ul>